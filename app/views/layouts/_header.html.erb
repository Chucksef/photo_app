<header class="navbar navbar-fixed-top navbar-inverse container-fluid">
    <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        </button>
        <%= link_to "#{Site.first.name}", root_path, class: "navbar-brand", id: "logo" %>
    </div>

    <% # SITE NAV SECTION OF NAVBAR %>
    <nav id="navbar" class="navbar-collapse collapse">
        <ul class="nav navbar-nav">
            <% SiteItem.order(order: :asc).all.each do |item| %>
                <%= render partial: 'layouts/nav_item', locals: { item: item }%>
            <% end %>
        </ul>

        <ul class="nav navbar-nav navbar-right">
            
            <% # ADMIN SECTION OF NAVBAR %>    
            <% if user_admin? %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                        Admin <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><%= link_to "Manage Pages", site_items_path %>
                        <li class="divider"></li>
                        <li><%= link_to "Users", users_path %></li>
                        <li class="divider"></li>
                        <li><%= link_to "Site Options", options_path %>
                    </ul>
                </li>
            <% end %>

            <% # USER LOGIN SECTION OF NAVBAR%>
            <% if logged_in? %>
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                    Account <b class="caret"></b>
                    </a>
                    <ul class="dropdown-menu">
                        <li><p><%= current_user.name %></p></li>
                        <li class="divider"></li>
                        <li><%= link_to "Settings", edit_user_path(current_user) %></li>
                        <li class="divider"></li>
                        <li>
                            <%= link_to "Log out", logout_path, method: :delete %>
                        </li>
                    </ul>
                </li>
            <% else %>
                <li><%= link_to "Sign-Up", signup_path %></li>
                <li><%= link_to "Log-In", login_path %></li>
            <% end %>
        </ul>
    </nav>
</header>