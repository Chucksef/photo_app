<% if item.type != "TmpGroup" && !item.tmp_group_id %>
    <%= content_tag(:li, link_to(item.name, page_path(item))) if item.visible && item.order != 1 %>
<% elsif item.tmp_group_id %>
    <%# THIS ELSIF IS NECESSARY TO CONTROL FOR EDGE CASES %>
<% else %>
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= "#{item.name}" %><span class="caret"></span></a>
        <ul class="dropdown-menu">
            <% item.pages.order(order: :asc).each do |sub| %>
                <%= content_tag(:li, link_to(sub.name, page_path(sub))) if sub.visible %>
            <% end %>
        </ul>
    </li>
<% end %>