<!DOCTYPE html>
<html>
	<head>
		<title><%= get_page_title(yield(:title)) %></title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'jquery-3.3.1.slim.min.js' %>
		<%= javascript_include_tag 'bootstrap.min' %>
		
		<%= javascript_include_tag 'directupload.js' %>
		<link href="https://fonts.googleapis.com/css?family=Montserrat:200,400,500&display=swap" rel="stylesheet">

	</head>

	<body>
		<%= render 'layouts/header' %>
		<div class="container-fluid" id="page_container">
			<% flash.each do |message_type, message| %>
				<%= content_tag(:div, message, id: "flash", class: "alert alert-#{message_type}") %>
			<% end %>
			<%= yield %>
		</div>
		
		<%= debug(params) if Rails.env.development? %>
		<%= render 'layouts/footer' %>
	</body>
</html>
