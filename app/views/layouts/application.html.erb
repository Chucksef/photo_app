<!DOCTYPE html>
<html>
	<head>
		<title><%= get_page_title(yield(:title)) %></title>
		<%= csrf_meta_tags %>
		<%= csp_meta_tag %>

		<%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

		<%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
		<%= javascript_include_tag 'jquery-3.3.1.slim.min.js' %>
		<%= javascript_include_tag 'bootstrap.min' %>
		<%= javascript_include_tag 'directupload.js' %>

	</head>

	<body>
		<%= render 'layouts/header' %>
		<div class="container-fluid" id="page_container">
			<% flash.each do |message_type, message| %>
				<%= content_tag(:div, message, id: "flash", class: "alert alert-#{message_type}") %>
			<% end %>
			<%= yield %>
		</div>
		
		<%= debug(params) if Rails.env.development? %>
		<%= render 'layouts/footer' %>
	</body>
</html>
