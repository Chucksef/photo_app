<h3 class="section-heading">Basic</h3>
<div class="form-group">
    <%= f.label "Name" %>
    <%= f.text_field :name, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label "Subtitle"%>
    <%= f.text_field :subtitle, class: "form-control" %>
</div>
<div class="form-group">
    <%= f.label "Description" %>
    <%= f.text_field :description, class: "form-control" %>
</div>
<div class="checkbox">
    <label>
        <%= f.check_box :visible %> Visible?
    </label>
</div>
<div class="form-group custom-select">
    <label>Group</label>
    <%= collection_select(:tmp_article, :tmp_group_id, TmpGroup.all, :id, :name, include_blank: " - NONE", class: "form-control", selected: item.tmp_group_id) %>
</div>
<div class="form-group">
    <%= f.label "Slug (letters, numbers, and dashes only)" %>
    <%= f.text_field :slug, class: "form-control" %>
</div>
<hr>