<div class="page-header">
    <h1>All Galleries</h1>
</div>
<div class="container">
    <table class="table table-condensed table-bordered table-striped">
        <tr>
            <th>Gallery Name</th>
            <th>Images</th>
            <th>Visible</th>
            <th>Date Created</th>
            <th>Date Edited</th>
            <th class="text-center">View Gallery</th>
            <th class="text-center">Delete Gallery</th>
        </tr>
    <% @galleries.each do |gallery|%>
        <tr>
            <td><%= gallery.name %></td>
            <td><%= gallery.count %></td>
            <td><%= gallery.visible %></td>
            <td><%= gallery.created_at %></td>
            <td><%= gallery.updated_at %></td>
            <td><%= link_to "View #{gallery.name}", gallery, class: "btn btn-block btn-xs btn-primary" %></td>
            <td><%= link_to "DELETE #{gallery.name}", "#", class: "btn btn-block btn-xs btn-danger" %></td>
        </tr>
    <% end %>
    </table>
</div>
<hr/>
<%= link_to "New Gallery", new_gallery_path, class: "btn btn-primary" %>