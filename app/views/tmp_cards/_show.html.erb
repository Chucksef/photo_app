<% # ITEM TEMPLATE %>

<div class="card_container" >

    <% item.articles.all.each do |article| %>
        <div class="card col-md-4 col-sm-12">
            <%= content_tag(:h4, article.title, class: "heading text-center") %>
            <hr>
            <% paragraphs = article.body.split("\n") %>
            <% paragraphs.each do |paragraph| %>
                <%= content_tag(:p, paragraph, class: "article" ) %>
            <% end %>
        </div>
    <% end %>
</div>