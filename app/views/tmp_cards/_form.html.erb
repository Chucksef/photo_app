<% # NEW Card Page %>

<div class="col-md-8 col-md-offset-2 col-sm-12">
    <%= form_for(item) do |f| %>
        
        <%= render 'shared/error_messages' %>

        <h3 class="section-heading">Basic</h3>
        <div class="form-group">
            <%= f.label "Name"%>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label "Subtitle"%>
            <%= f.text_field :subtitle, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label "Description" %>
            <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="checkbox">
            <label>
                <%= f.check_box :visible %> Visible?
            </label>
        </div>
        <div class="form-group custom-select">
            <%= f.label "Group"%>
            <%= collection_select(:tmp_card, :tmp_group_id, TmpGroup.all, :id, :name, include_blank: " - NONE", class: "form-control", selected: item.tmp_group_id) %>
        </div>
        <hr>

        <% (1..6).to_a.each do |num| %>
            <%= content_tag(:h3, "Card #{num}")%>
            <div class="form-group">
                <%= f.label "Heading_#{num}" %>
                <%= f.text_field "heading_#{num}", class: "form-control" %>
            </div>
            <div class="form-group">
                <%= f.label "Article_#{num}" %>
                <%= f.text_area "article_#{num}", class: "form-control"%>
            </div>
            <hr>
        <% end %>
        <%= f.submit yield(:button_text), class: "btn btn-block btn-primary" %>

    <% end %>
</div>