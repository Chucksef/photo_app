<% if @gallery.errors.any? %>
	<div id="error_explanation">
		<div class="alert alert-danger">
			The form contains <%= pluralize(@gallery.errors.count, "error") %>.
		</div>
		<ul>
			<% @gallery.errors.full_messages.each do |msg| %>
			<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
<% end if @gallery%>
