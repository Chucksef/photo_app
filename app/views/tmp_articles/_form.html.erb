<% # NEW Article Page %>

<div class="col-md-8 col-md-offset-2 col-sm-12">
    <%= form_for(item) do |f| %>
        <%= render 'shared/error_messages' %>
        <%= f.submit yield(:button_text), class: "btn btn-block btn-primary" %>

        <h3 class="section-heading">Basic</h3>
        <div class="form-group">
            <%= f.label "Name" %>
            <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label "Subtitle"%>
            <%= f.text_field :subtitle, class: "form-control" %>
        </div>
        <div class="form-group">
            <%= f.label "Description" %>
            <%= f.text_area :description, class: "form-control" %>
        </div>
        <div class="checkbox">
            <label>
                <%= f.check_box :visible %> Visible?
            </label>
        </div>
        <div class="form-group custom-select">
            <label>Group</label>
            <%= collection_select(:tmp_article, :tmp_group_id, TmpGroup.all, :id, :name, include_blank: " - NONE", class: "form-control", selected: item.tmp_group_id) %>
        </div>
        <hr>

        <h3>Article</h3>
        <div class="fields">
            <%= f.simple_fields_for :articles do |builder| %>
                <%= render partial: 'article', locals: {f: builder} %>
            <% end %>
        </div>

        <%= content_tag(:hr) unless item.type == "TmpArticle"%>
        <%= f.submit yield(:button_text), class: "btn btn-block btn-primary" %>

    <% end %>
</div>